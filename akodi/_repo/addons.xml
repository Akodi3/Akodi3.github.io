<?xml version="2.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon 	id="akodi.repo" 
		name="Akodi Build Repo" 
		version="2.0" 
		provider-name="Akodi">
	<extension point="xbmc.addon.repository" name="Akodi: Repo">
		<info compressed="false">https://www.akodi.xyz/_repo/addons.xml</info>
		<checksum>https://www.akodi.xyz/_repo/addons.xml.md5</checksum>
		<datadir zip="true">https://www.akodi.xyz/_repo/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Akodi Build Repo</summary>
		<description>La mejor forma de hacer Kodi</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.program.akodi" name="Akodi Wizard" version="2.0" provider-name="Akodi">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
        <import addon="script.kodi.android.update" optional="true" version="1.2.0" />
    </requires>
    
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    
    <extension point="xbmc.service" library="startup.py" start="startup" />
    
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Akodi Wizard</summary>
        <description lang="en">[COLOR yellow]La mejor forma de hacer Kodi[/COLOR]</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <source>https://www.github.com/a4k-openproject/plugin.program.openwizard/</source>
        <news>
        </news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>
</addon>
</addons>
